{
  "$schema": "http://json-schema.org/draft-07/schema",
  "title": "Modifications",
  "description": "Modifications to the element.",
  "type": "array",
  "items": {
    "type": "object",
    "properties": {
      "control_name": {
        "type": "string"
      },
      "array_name": {
        "type": "string",
        "enum": ["bindings", "controls"]
      },
      "operation": {
        "type": "string",
        "enum": ["insert_back", "insert_front", "insert_after", "insert_before", "move_back", "move_front", "move_after", "move_before", "swap", "remove", "replace"]
      },
      "where": {
        "$ref": "./bindings.json"
      },
      "target": {
        "$ref": "./bindings.json"
      },
      "target_control": {
        "type": "string"
      },
      "value": {
        "oneOf": [
          {
            "$ref": "./bindings.json"
          },
          {
            "title": "Controls",
            "description": "The controls to add.",
            "anyOf": [
              {
                "type": "array",
                "items": {
                  "additionalProperties": {
                    "title": "Sub Element",
                    "$ref": "../../grouped-ui.json"
                  }
                }
              },
              {
                "$ref": "../../general/item_ref.json"
              }
            ]
          }
        ]
      }
    }
  }
}
