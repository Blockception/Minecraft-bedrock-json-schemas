        {
          "title": "Red",
          "type": "integer",
          "default": 0,
          "minimum": 0,
          "maximum": 255
        },
        {
          "title": "Green",
          "type": "integer",
          "default": 0,
          "minimum": 0,
          "maximum": 255
        },
        {
          "title": "Blue",
          "type": "integer",
          "default": 0,
          "minimum": 0,
          "maximum": 255
        }
      ]
    }
  ],
  "examples": ["#FFFFFF", [255, 255, 255]]
}
